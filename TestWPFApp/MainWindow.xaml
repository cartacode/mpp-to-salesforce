<Window x:Class="TestWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Choose Folder" HorizontalAlignment="Left" Margin="76,47,0,0" VerticalAlignment="Top" Width="98" Click="Button_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="611,47,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click_1"/>
        <Label Content="Result" HorizontalAlignment="Left" Margin="76,90,0,0" VerticalAlignment="Top" Width="98"/>
        <ScrollViewer HorizontalAlignment="Left" Height="236" Margin="76,134,0,0" VerticalAlignment="Top" Width="650" Name="Scroller">
            <TextBlock x:Name="statusBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Stretch" MinWidth="100" Width="{Binding ElementName=Scroller, Path=ViewportWidth}"/>
        </ScrollViewer>

    </Grid>
</Window>
